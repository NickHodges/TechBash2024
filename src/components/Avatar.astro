---
const fetchAvatar = async (): Promise<string> => {
  await new Promise((res) => setTimeout(res, 1500));

  const avatars = ['/man.png', '/woman.png', '/NickAvatar.jpg'];
  const randomIndex = Math.floor(Math.random() * avatars.length);

  const avatar = avatars[randomIndex] ?? '/NickAvatar.png';

  return avatar;
};

const avatarImage = await fetchAvatar();
---

<img src={avatarImage} alt="Your avatar" />
