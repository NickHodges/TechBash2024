---
import Avatar from './Avatar.astro';

type Props = {
  title: string;
};

// Extracting Props
const { title } = Astro.props;
---

<header class="bg-gray-800 text-white p-4">
  <h1 class="text-xl font-bold">{title}</h1>
  <p><a href="/">Home</a> | <a href="/blog">Blog</a> | <a href="/contact">Contact</a> | <a href="/randomquote">Random Quote</a></p>
  <Avatar server:defer >
    <div slot="fallback">
      <img src="https://placehold.co/60">
    </div>
  </Avatar>
</header>
<hr />
